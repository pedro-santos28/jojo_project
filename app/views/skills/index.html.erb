<div class="container mt-5">
  <%= turbo_frame_tag "skills_frame" do%>
    <div class="d-flex gap-3 align-items-center justify-content-around mb-3">
      <h1 class="text-primary">Skills</h1>
      <%= link_to "New skill", new_skill_path, class: "btn btn-primary"%>
    </div>

    <div id="skills">
      <% @skills.each do |skill| %>
          <%= render partial: "skill", locals: {skill: skill}%>
      <% end %>
    </div>
  <%end%>
</div>