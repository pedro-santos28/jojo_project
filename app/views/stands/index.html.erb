<%= turbo_frame_tag "stands_frame" do %>
  <div id="stands" class="container mt-5">
    <div class="d-flex gap-3 align-items-center justify-content-around">
      <h1 class="text-primary">Stands</h1>
      <%= link_to "New stand", new_stand_path, class: "btn btn-primary"%>
    </div>

    <div class="row mt-5">
      <% @stands.each do |stand|%>
      <div class="col-12 col-md-6 col-lg-4 col-xl-3 p-2">
        <%= render partial: "stand", locals: {stand: stand}%>
      </div>
      <%end%>
    </div>
  </div>
<% end %>