<%= turbo_stream.update "stands_frame" do %>
  <%= turbo_frame_tag "stands_frame" do %>
    <div class="p-3 container mt-5 d-flex flex-column flex-md-row gap-2 align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center">
        <%= image_tag @stand.image, width: 500, height: 500 if @stand.image.present?%>
      </div>

      <div class="d-flex flex-column gap-2 border border-secondary rounded p-5">
        <h3><%= @stand.name %>'s Profile</h3>

        <div class="d-flex gap-2">
          <p class="fw-bold">Name: </p>
          <span> <%= emptyStringHelper(@stand.name)  %></span>
        </div>

        <div class="d-flex gap-2">
          <p class="fw-bold">Chapter: </p>
          <span> <%= emptyStringHelper(@stand.chapter)  %></span>
        </div>

        <div class="d-flex gap-2">
          <p class="fw-bold">Battlecry: </p>
          <span> <%= emptyStringHelper(@stand.battlecry)  %></span>
        </div>

        <div class="d-flex gap-2">
          <p class="fw-bold">Stand user: </p>
          <span> <%= emptyStringHelper(@stand.character.name)  %></span>
        </div>

         <div class="d-flex gap-2">
          <%= link_to "Back", stands_path, class: "btn btn-secondary "%>
          <%= link_to "Delete", stand_path(@stand.id), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: true}%>
        </div>
      </div>
      
    </div>
  <% end %>
<%end%>

